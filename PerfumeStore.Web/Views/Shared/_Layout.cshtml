<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="ASP.NET 8 perfume commerce stack with dynamic admin controls." />
    <title>@ViewData["Title"] - Perfumier</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <!-- HEADER -->
    <header class="site-header">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">

                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Landing" asp-action="Index">
                    Perfumier<span>.</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu"
                        aria-controls="navMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navMenu">

                    <!-- Left Menu -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Landing" asp-action="Index">Landing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Catalog" asp-action="Index">Catalog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Checkout" asp-action="Index">Checkout</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    </ul>

                    <!-- Right Buttons -->
                    <div class="d-flex gap-2">

                        <!-- Login Button (new) -->
                        <button class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#loginModal">
                            Login
                        </button>

                        <a class="btn btn-outline-secondary" href="/catalog">Shop</a>
                        <a class="btn btn-dark" href="/admin">Launch Console</a>
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN -->
    <main class="py-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="site-footer bg-light mt-5 py-3 border-top">
        <div class="container d-flex flex-column flex-lg-row justify-content-between align-items-center gap-2">
            <p class="mb-0 text-secondary">
                © @DateTime.UtcNow.Year Perfumier — Built with ASP.NET 8, PostgreSQL + Dapper.
            </p>

            <div class="footer-links d-flex gap-3">
                <a href="/catalog" class="text-secondary text-decoration-none">Catalog</a>
                <a href="/admin" class="text-secondary text-decoration-none">Admin</a>
                <a href="https://learn.microsoft.com/aspnet/core" class="text-secondary text-decoration-none">Docs</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-3">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">Login</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body text-center">
                    <p class="text-muted mb-3">Select how you want to login</p>

                    <a href="/account/login" class="btn btn-dark w-100 py-2 mb-2">Customer Login</a>
                    <a href="/admin/login" class="btn btn-outline-dark w-100 py-2">Admin Login</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
